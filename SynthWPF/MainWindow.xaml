<Window x:Class="SynthWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SynthWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="OnKeyDownHandler" KeyUp="OnKeyUpHandler">
    <DockPanel VerticalAlignment = "Center" Margin="10">
        <TextBox Text = "{Binding ElementName=slValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Right" TextAlignment="Right" Width="40" />
            <Slider Maximum = "0.1" TickPlacement="BottomRight" TickFrequency="0.01" Name="slValue" ValueChanged="Slider_ValueChanged"/>
        </DockPanel>
</Window>
